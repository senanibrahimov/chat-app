        <Button
            android:id="@+id/button34"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:text="Button"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/button19"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:onClick="fackt"
            android:text="!"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/button37"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:text="-"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:id="@+id/button20"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:text="0"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/button21"
            android:layout_width="69dp"
            android:layout_height="68dp"
            android:onClick="nine"
            android:text="9"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/button22"
            android:layout_width="69dp"
